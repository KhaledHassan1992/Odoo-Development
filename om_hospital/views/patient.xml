<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- begin -->

<!-- search View begin -->
  <record id="hospital_patient_search" model="ir.ui.view">
      <field name="name">hospital.patient.search</field>
      <field name="model">hospital.patient</field>
      <field name="arch" type="xml">
        <search string="Search Patients">
          <!-- for search box filter -->
         <field name="patient_name" filter_domain="['|',('patient_name', 'ilike', self),('patient_age', 'ilike', self)]"/>
          <separator />

          <!-- filter -->
          <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
          <filter string="Female" name="female" domain="[('gender', '=', 'fe_male')]"/>

          <!-- for gorup filter -->
          <group expand="0" string="Group By">
            <filter string="Gender" name="gender" context="{'group_by':'gender'}"/>
          </group>


        </search>
      
      </field>
    </record>
<!-- search view end -->

<!-- views -->

<!-- form views begin -->
        <record id="patient_form" model="ir.ui.view">
            <field name="name">hospital.patient.form</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">

            <form string="Patients Form">
            <!--  -->
            <sheet>
                <group>
                <group>
                  <field name="patient_name"></field>
                  <field name="patient_age"></field>
                  <field name="gender"></field>
                  <field name="age_group"/>
                </group>
              
                <group>
              
               
                <field name="notes"></field>
                <field name="image"></field>
                </group>
                </group>
              </sheet>
                <!--  -->
                <!-- for chatter view should add dependancy mail -->
              <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>



                <!-- end chatter view -->
                </form>
            </field>
        </record>
<!-- form view end -->





<!-- Tree views begin -->
        <record id="patient_tree" model="ir.ui.view">
            <field name="name">hospital.patient.tree</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
            <tree string="Patients tree">
                  <field name="patient_name"></field>
                  <field name="patient_age"></field>
                  <field name="gender"></field>
                  <field name="age_group"></field>
                  <field name="notes"></field>
                  <field name="image"></field>
            </tree>   
            </field>
        </record>
<!-- Tree view end -->




<!-- end views -->




<!-- action of the patients menu -->
   <record id="action_patient" model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <!-- for default search -->
            <field name="context">{"search_default_male":1}</field>
            <!--  -->
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
               Create First Patient !
              </p>
            </field>
    </record>





<!-- MenuItems -->
<menuitem id="hospital_root" name="Hospital" sequence="0" web_icon="om_hospital,static/description/icon.png"/>
<menuitem id="hospital_patient" name="Patients" parent="hospital_root" action="action_patient" sequence="1"/>



<menuitem id="hospital_patient1" name="hospital_patient1" parent="hospital_patient"  sequence="1"/>
<menuitem id="hospital_patient2" name="Patients 2" parent="hospital_patient" sequence="2"/>
<menuitem id="hospital_patient3" name="Patients 3" parent="hospital_patient" sequence="3"/>


<!-- end document  -->
</odoo> 
