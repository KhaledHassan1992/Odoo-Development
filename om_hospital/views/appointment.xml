<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- begin -->

<!-- search View begin -->

<!-- search view end -->

<!-- views -->

<!-- form views begin -->
        <record id="appoinment_form" model="ir.ui.view">
            <field name="name">hospital.appointmant.form</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">

            <form string="Appointment Form">
            <!--  -->
            <sheet>
                <group>
                <group>
                  <field name="name"></field>
                  <field name="patient_id"></field>
                  <field name="patient_age"/>
                  <field name="notes"/>
                  <field name="doctor_note"/>
                </group>
              
                <group>
                <field name="appointment_date"></field>
                <field name="appointment_datetime"></field>
                <field name="amount"/>
                <field name="state"/>
                </group>
                </group>
              </sheet>
                <!--  -->
                <!-- for chatter view should add dependancy mail -->
              <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>



                <!-- end chatter view -->
                </form>
            </field>
        </record>
<!-- form view end -->





<!-- Tree views begin -->
    <record id="appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree string="Patients tree">
                <field name="name"></field>
                <field name="patient_id"></field>
                <field name="patient_age"/>
                <field name="notes"/>
                <field name="doctor_note"/>
                <field name="appointment_date"></field>
                <field name="appointment_datetime"></field>
                <field name="amount"/>
                <field name="state"/>
            </tree>   
        </field>
    </record>


    <!--action of the appointment menu-->
    <record id="action_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create your First Appointment !
          </p>
        </field>
    </record>

    <menuitem id="hospital_appointment" name="Appointments" parent="hospital_root" action="action_appointment" sequence="4"/>


<!-- end document  -->
</odoo> 
